<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bg_graylikewhite"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:textSize="@dimen/font_large"
            android:textColor="@color/font_black"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:text="历史派单"/>

        <TextView
            android:text="满意度"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/font_gray"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:background="@color/bg_graylikewhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:background="@mipmap/et_search"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/font_large"
        android:text="搜 索"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/font_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/head_portrait"/>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView android:id="@+id/top_tv2"
                android:text="单号INVTSPT_20160802_0702"
                android:gravity="center"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/bottom_tv2"
                android:layout_below="@id/top_tv2"
                android:layout_marginTop="5dp"
                android:text="印尼公司关于**的销售和后续推广"
                android:gravity="center"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView android:id="@+id/right_tv2"
                    android:text="15:38"
                    android:gravity="center"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/little_arrow"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/head_portrait"/>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView android:id="@+id/top_tv3"
                android:text="单号INVTSPT_20160802_0702"
                android:gravity="center"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/bottom_tv3"
                android:layout_below="@id/top_tv3"
                android:layout_marginTop="5dp"
                android:text="印尼公司关于**的销售和后续推广"
                android:gravity="center"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView android:id="@+id/right_tv3"
                    android:text="15:38"
                    android:gravity="center"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/little_arrow"/>

            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>

    <View
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>